<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/eventTabs">

        <fragment android:name="njuke.njuke_host.TabFragment"
            android:id="@+id/tabfragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_tab" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="20pt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:id="@+id/playBar"
        android:layout_alignParentBottom="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prevSongString"
            android:id="@+id/prevBtn"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_gravity="bottom"
            android:layout_toEndOf="@+id/prevBtn"
            android:layout_toRightOf="@id/prevBtn"
            android:layout_toStartOf="@+id/nextBtn"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/nextBtn"
            android:layout_alignTop="@+id/nextBtn" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playpauseString"
            android:id="@+id/playToggleBtn"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nextSongString"
            android:id="@+id/nextBtn"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/playToggleBtn"
            android:layout_toStartOf="@+id/playToggleBtn" />

    </RelativeLayout>

</RelativeLayout>
